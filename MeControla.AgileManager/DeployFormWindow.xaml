<Window x:Class="MeControla.AgileManager.DeployFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeControla.AgileManager"
        mc:Ignorable="d"
        Title="DeployFormWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Deployed In:" Margin="0,8,153,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77"/>
        <DatePicker Name="DpDeployedIn"  Margin="0,10,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <DataGrid Name="DgIssueDeploy" Margin="10,40,10,45" AutoGenerateColumns="False" CanUserAddRows="false">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Key}" Header="Issue" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Summary}" Header="Summary" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Services}" Header="Services" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Salvar" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Click="ButtonSave_Click"/>
    </Grid>
</Window>
